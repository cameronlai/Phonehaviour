<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <PreferenceCategory
        android:title="@string/pref_display_title"
        android:key="pref_key_display_settings">
        <CheckBoxPreference
            android:key="pref_show_package_name"
            android:summary="@string/pref_summary_show_package_name"
            android:title="@string/pref_title_show_package_name"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_system_title"
        android:key="pref_key_system_settings">
        <Preference
            android:key="enableUsageStatistics"
            android:title="Enable Usage Statistics">
            <intent android:action="android.settings.USAGE_ACCESS_SETTINGS"/>
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
